{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "lib": ["es7", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
