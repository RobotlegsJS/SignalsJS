{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
