{
  "name": "@robotlegsjs/signals",
  "version": "0.0.8",
  "description": "TypeScript port of AS3 Signals.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "test": "nyc mocha",
    "karma": "karma start --single-run",
    "autoformat": "prettier --config .prettierrc --write {src,test}/**/{*,*.test}.ts",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "prepublish": "tsc -d && publish-please guard",
    "clean-up": "rm -rf coverage && rm -rf lib",
    "publish-please": "npm run autoformat && npm run clean-up && npm run build && publish-please",
    "build": "webpack --env.production"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RobotlegsJS/SignalsJS.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "Signals",
    "TypeScript"
  ],
  "author": "RobotlegsJS",
  "contributors": [
    "Bartosz Oczujda <boczujda@goodgamestudios.com>",
    "Tiago Schenkel <tiago.schenkel@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RobotlegsJS/SignalsJS/issues"
  },
  "homepage": "https://github.com/RobotlegsJS/SignalsJS#readme",
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.42",
    "@types/sinon": "^2.3.3",
    "bluebird": "^3.5.0",
    "browserify-versionify": "^1.0.6",
    "chai": "^4.1.2",
    "es6-map": "^0.1.5",
    "es6-symbol": "^3.1.1",
    "glslify": "^6.1.0",
    "imports-loader": "^0.7.1",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-es6-shim": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-sourcemap-writer": "^0.1.2",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "prettier": "^1.7.0",
    "publish-please": "^2.3.1",
    "reflect-metadata": "^0.1.10",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "source-map-support": "^0.4.17",
    "ts-loader": "^2.3.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
